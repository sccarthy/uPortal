<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
    
    <!-- Main portlet view controller -->
    <bean id="mainDictionaryController" class="org.jasig.portlet.widget.mvc.DictionaryController"/>
    
    
    <!-- Portlet controller mappings -->
    <bean id="portletModeParameterHandlerMapping" 
            class="org.springframework.web.portlet.handler.ParameterHandlerMapping">
        <property name="defaultHandler" ref="mainDictionaryController" />
    </bean>
    
    
</beans>