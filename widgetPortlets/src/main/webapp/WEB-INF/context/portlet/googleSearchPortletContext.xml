<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <!-- Properties configuration -->
    <bean id="propertyConfigurer"
        class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer"
        lazy-init="false">
        <property name="locations">
            <list><value>classpath:configuration.properties</value></list>
        </property>
    </bean>
    
    
    <!-- Main portlet view controller -->
    <bean id="searchController" class="org.jasig.portlet.widget.mvc.GoogleSearchController">
        <property name="apiKey" value="${google.api.key}"/>
    </bean>
        

    <!-- Portlet controller mappings -->
    <bean id="portletModeParameterHandlerMapping" 
            class="org.springframework.web.portlet.handler.ParameterHandlerMapping">
        <property name="defaultHandler" ref="searchController" />
    </bean>
    
    
</beans>