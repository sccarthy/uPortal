<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
    
    <!-- Main portlet view controller -->
    <bean id="mainCalendarController" class="org.springframework.web.portlet.mvc.ParameterizableViewController">
        <property name="viewName" value="calendar"/>
    </bean>
    
    <!-- Portlet controller mappings -->
    <bean id="portletModeParameterHandlerMapping" 
            class="org.springframework.web.portlet.handler.ParameterHandlerMapping">
        <property name="defaultHandler" ref="mainCalendarController" />
    </bean>
	
</beans>